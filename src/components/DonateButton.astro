---
interface ButtonProps {
  title?: string;
  class?: string;
}

const { title = 'Make a Donation', class: className } = Astro.props as ButtonProps;
const buttonClass = 'paypal-button ' + (className ?? '');
---

<a
  class={buttonClass}
  href="https://www.paypal.com/donate?hosted_button_id=BZWMH5PS56GAW"
  target="_blank"
>
  <span class="text-black">
    {title}
  </span>
</a>

<style>
  .paypal-button {
    text-align: center;
    display: inline-block;
    background: #ffc439;
    border-radius: 6.25rem;
    min-height: 1.625rem;
    -webkit-box-shadow: inset 0 2px 0 0 hsla(0, 0%, 100%, 0.41);
    box-shadow: inset 0 2px 0 0 hsla(0, 0%, 100%, 0.41);
    border: 1px solid #d9a630;
    color: #000;
    font-family: Helvetica;
    font-size: 0.875rem;
    font-weight: 700;
    padding: 0 1rem;
    min-width: 7.5rem;
    margin-bottom: 0;
    transition: 0.1s all linear;
  }

  .paypal-button:hover {
    background-color: color-mix(in oklch, #ffc439, transparent 20%);
  }

  .paypal-button.home-page {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 25px;
    margin-inline: auto;
    width: 290px;
    height: 58px;
  }
</style>
